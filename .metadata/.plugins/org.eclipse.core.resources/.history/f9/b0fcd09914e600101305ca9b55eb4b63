package example;

import java.util.Random;
import java.util.Scanner;

public class LoopEx06 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		//		<문제>영수증 출력[2단계]
//		1. 5번 주문을 받는다.
//		2. 주문이 끝난 후, 돈을 입력 받는다.
//		3. 각 메뉴 별 주문 수량과 총 금액을 출력한다.
//		4. 각 메뉴의 가격은 아래와 같다.
//		불고기버거 : 8700
//		새우버거 : 6200
//		콜라 : 1500
		

		int num1 = 8700;
		int num2 = 6200;
		int num3 = 1500;
		int n1 = 0;
		int n2 = 0;
		int n3 = 0;
		
		System.out.println("==버거==");
		System.out.println("1. 불고기 버거:" + num1 + "원");
		System.out.println("2. 새우 버거:" + num2 + "원");
		System.out.println("3. 콜라:" + num3 + "원");
		
		
		int re = 0;
		
		while(re<=5) {
			System.out.println("메뉴 선택");
			int select = scan.nextInt();
			
			if(select == 1) {n1 += 1;}
			else if(select ==2) {n2 +=1;}
			else{n3 +=1;}
			re++;
		}
		
		int total = (num1*n1)+(num2*n2)+(num3*n3);
		System.out.println("총 금액:"+ total+"원");
		System.out.println("현금입력:");
		int money = scan.nextInt();
		int charge = money - total;
		if(charge>0) {
			System.out.println("==버거==");
			System.out.println("1. 불고기 버거:" + num1 + "개");
			System.out.println("2. 새우 버거:" + num2 + "개");
			System.out.println("3. 콜라:" + num3 + "개");
			System.out.println("3. 총금액:" + total + "원");
			System.out.println("3. 잔액:" + charge + "원");
		}else {
			System.out.println("잔액 부족");
		}
		

		
	}

}
