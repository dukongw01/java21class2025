package example;

import java.util.Scanner;

public class LoopEx08 {

	public static void main(String[] args) {
		
		//<문제>ATM[2단계]
//		1. 입금
//		. 입금할 금액을 입력받아, myMoney에 입금
//		2. 출금
//		. 출금할 금액을 입력받아, myMoney에서 출금
//		. 단, 출금할 금액이 myMoney잔액을 초과할 경우 출금불가
//		3. 이체
//		. yourAcc 계좌번호를 입력받아, 이체
//		. 이체할 금액이 myMoney잔액을 초과할 경우 이체 불가
//		. 이체 후 yourMoney잔액 증가
//		4. 조회
//		. myMoney와 yourMoney잔액 모두 출력
		
		Scanner scan = new Scanner(System.in);
		
		int myAcc = 1111;
		int yourAcc = 2222;

		int myMoney = 50000;
		int yourMoney = 70000;
		
		int log = -1; //-1(종료), 1(myAcc)계좌, 2(yourAcc)계좌
		
		boolean run = true;
		while(run) {
			System.out.println("1.입금");
			System.out.println("2.출금");
			System.out.println("3.이체");
			System.out.println("4.조회");
			System.out.println("0.종료");
			
			System.out.print("버튼 선택:");
			int sel = scan.nextInt();
			
			if(sel == 1) {
				if(log == -1) {
					System.out.print("계좌 입력:");
					int myacc = scan.nextInt();
					int youracc = scan.nextInt();
					
					System.out.println("잔액:");
					int mymoney = scan.nextInt();
					int yourmoney = scan.nextInt();
					
					if(myacc == myAcc && mymoney == myMoney ) {
						log = 1;
						System.out.println("입금 계좌"+myAcc);
					}else if(youracc == yourAcc && yourmoney == yourMoney) {
						log = 2;
						System.out.println("입금 계좌"+yourAcc);
					}
				}
			}
			
		}
		

		
		
		
		
		
	}

}
