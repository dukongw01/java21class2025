package example;

import java.util.Scanner;

public class ifEx18 {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        
        System.out.print("이동할 정거장 수를 입력: ");
        int station = scan.nextInt();
        int fee = 0;

        if (station > 0 && station <= 5) {
            fee = 500;
        } else if (station >= 6 && station <= 10) {
            fee = 600;
        } else if (station > 10) {
            fee = 600;
            // 10정거장 초과분에 대해 2정거장마다 50원 추가
            // (station - 11) / 2 공식은 11,12일 때 0, 13,14일 때 1이 나옵니다.
            // 여기에 1을 더해 보정하거나 올림 처리를 할 수 있습니다.
            
            int extraStations = station - 10;
            // 2구간마다 50원 (홀수일 때 올림 처리 로직 포함)
            int feeadd = ((extraStations + 1) / 2) * 50;
            fee += feeadd;
        } else {
            System.out.println("잘못된 입력입니다.");
            return;
        }

        System.out.println("요금 = " + fee + "원");
        scan.close();
    }
}